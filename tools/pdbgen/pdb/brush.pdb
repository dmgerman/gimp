sub brush_arg () {{
    name => 'name',
    type => 'string',
    desc => 'The brush name'
}}


# The defs

sub brush_new {
    $blurb = "Creates a new brush";
    $help  = "This procedure creates a new, uninitialized brush";

    &mitch_pdb_misc('2004', '2.2');

    @inargs = (
	{ name => 'name', type => 'string',
	  desc => 'The requested name of the new brush' }
    );

    @outargs = (
	{ name => 'actual_name', type => 'string', init => 1,
	  desc => 'The actual new brush name' }
    );

    %invoke = (
        code => <<'CODE'
{
  if (strlen (name))
    {
      GimpData *data = gimp_data_factory_data_new (gimp->brush_factory, name);

      if (data)
        actual_name = g_strdup (GIMP_OBJECT (data)->name);
      else
        success = FALSE;
    }
  else
    success = FALSE;
}
CODE
    );
}

sub brush_duplicate {
    $blurb = "Duplicates a brush";
    $help  = "This procedure creates an identical brush by a different name";

    &mitch_pdb_misc('2004', '2.2');

    @inargs = (
        &brush_arg
    );

    @outargs = (
	{ name => 'copy_name', type => 'string', init => 1,
	  desc => "The name of the brush's copy" }
    );

    %invoke = (
        code => <<'CODE'
{
  GimpBrush *brush = (GimpBrush *)
    gimp_container_get_child_by_name (gimp->brush_factory->container, name);

  if (brush)
    {
      GimpBrush *brush_copy = (GimpBrush *)
        gimp_data_factory_data_duplicate (gimp->brush_factory,
                                          GIMP_DATA (brush));

      if (brush_copy)
        copy_name = g_strdup (GIMP_OBJECT (brush_copy)->name);
      else
        success = FALSE;
    }
  else
    success = FALSE;
}
CODE
    );
}

